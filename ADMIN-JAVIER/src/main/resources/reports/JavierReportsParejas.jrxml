<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
        xmlns="http://jasperreports.sourceforge.net/jasperreports"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
        name="ParejaReport"
        language="java"
        pageWidth="595"
        pageHeight="842"
        columnWidth="555"
        leftMargin="20"
        rightMargin="20"
        topMargin="20"
        bottomMargin="20"
        uuid="dddddddd-dddd-dddd-dddd-dddddddddddd">


<!-- ESTILOS -->
    <style name="TitleStyle" fontName="SansSerif" fontSize="18" isBold="true"/>
    <style name="SubTitleStyle" fontName="SansSerif" fontSize="11" isItalic="true"/>
    <style name="TableHeader" mode="Opaque" backcolor="#3652a5"
           forecolor="#FFFFFF"
           fontName="SansSerif" fontSize="10" isBold="true" pdfFontName="Helvetica-Bold"/>
    <style name="TableDetail" fontName="SansSerif" fontSize="9"/>
    <!-- Sin query porque usas JRTableModelDataSource -->
    <queryString><![CDATA[]]></queryString>

    <field name="COLUMN_0" class="java.lang.Object"/>
    <field name="COLUMN_1" class="java.lang.Object"/>
    <field name="COLUMN_2" class="java.lang.Object"/>

    <background>
        <band splitType="Stretch"/>
    </background>

    <!-- TÍTULO -->
    <title>
        <band height="140">

            <image>
                <reportElement x="174" y="0" width="335" height="80"/>
                <imageExpression><![CDATA["reports/header.jpeg"]]></imageExpression>
            </image>


            <staticText>
                <reportElement x="0" y="70" width="555" height="25" style="TitleStyle"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Reporte de Parejas]]></text>
            </staticText>

        </band>
    </title>

    <!-- CABECERA -->
    <pageHeader>
        <band height="25">
            <staticText>
                <reportElement x="0" y="5" width="200" height="20" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Evento]]></text>
            </staticText>

            <staticText>
                <reportElement x="200" y="5" width="180" height="20" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Facultad]]></text>
            </staticText>

            <staticText>
                <reportElement x="380" y="5" width="175" height="20" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Descripción]]></text>
            </staticText>
        </band>
    </pageHeader>

    <!-- DETALLE -->
    <detail>
        <band height="18">
            <!-- Pareja (COLUMN_0) -->
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement x="0" y="0" width="200" height="15" style="TableDetail"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{COLUMN_0}]]></textFieldExpression>
            </textField>

            <!-- Candidato 1 (COLUMN_1) -->
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement x="200" y="0" width="180" height="15" style="TableDetail"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{COLUMN_1}]]></textFieldExpression>
            </textField>

            <!-- Candidato 2 (COLUMN_2) -->
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement x="380" y="0" width="175" height="15" style="TableDetail"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{COLUMN_2}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- PIE DE PÁGINA -->
    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="555" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
