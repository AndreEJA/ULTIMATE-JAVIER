<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
        xmlns="http://jasperreports.sourceforge.net/jasperreports"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
        name="EventosReport"
        language="java"
        pageWidth="595"
        pageHeight="842"
        columnWidth="555"
        leftMargin="20"
        rightMargin="20"
        topMargin="20"
        bottomMargin="20"
        uuid="11111111-1111-1111-1111-111111111111">

    <!-- ESTILOS -->
    <style name="TitleStyle" fontName="SansSerif" fontSize="18" isBold="true"/>
    <style name="SubTitleStyle" fontName="SansSerif" fontSize="11" isItalic="true"/>
    <style name="TableHeader" mode="Opaque" backcolor="#DDDDDD"
           fontName="SansSerif" fontSize="10" isBold="true" pdfFontName="Helvetica-Bold"/>
    <style name="TableDetail" fontName="SansSerif" fontSize="9"/>

    <!-- Sin query porque usas JRTableModelDataSource -->
    <queryString><![CDATA[]]></queryString>

    <!-- CAMPOS: exactamente como salen en el TableModel -->
    <field name="Name" class="java.lang.Object"/>
    <field name="Notas" class="java.lang.Object"/>
    <field name="State" class="java.lang.Object"/>

    <background>
        <band splitType="Stretch"/>
    </background>

    <!-- TÍTULO -->
    <title>
        <band height="70">
            <staticText>
                <reportElement x="0" y="10" width="555" height="25" style="TitleStyle"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Reporte de Eventos]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="40" width="555" height="15" style="SubTitleStyle"/>
                <textElement textAlignment="Center"/>
                <text><![CDATA[Javier]]></text>
            </staticText>
        </band>
    </title>

    <!-- CABECERA DE PÁGINA -->
    <pageHeader>
        <band height="25">
            <!-- Name -->
            <staticText>
                <reportElement x="0" y="5" width="250" height="20" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Nombre]]></text>
            </staticText>

            <!-- Notas -->
            <staticText>
                <reportElement x="250" y="5" width="150" height="20" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Notas]]></text>
            </staticText>

            <!-- State -->
            <staticText>
                <reportElement x="400" y="5" width="155" height="20" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Estado]]></text>
            </staticText>
        </band>
    </pageHeader>

    <!-- DETALLE -->
    <detail>
        <band height="18">
            <!-- Name -->
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement x="0" y="0" width="250" height="15" style="TableDetail"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{Name}]]></textFieldExpression>
            </textField>

            <!-- Notas -->
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement x="250" y="0" width="150" height="15" style="TableDetail"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{Notas}]]></textFieldExpression>
            </textField>

            <!-- State -->
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement x="400" y="0" width="155" height="15" style="TableDetail"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{State}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- PIE DE PÁGINA -->
    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="555" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
