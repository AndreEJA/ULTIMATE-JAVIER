<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
        xmlns="http://jasperreports.sourceforge.net/jasperreports"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
        name="FacultadReport"
        language="java"
        pageWidth="595"
        pageHeight="842"
        columnWidth="555"
        leftMargin="20"
        rightMargin="20"
        topMargin="20"
        bottomMargin="20">

    <!-- ESTILOS -->
    <style name="TitleStyle" fontName="SansSerif" fontSize="22" isBold="true"/>
    <style name="SubTitleStyle" fontName="SansSerif" fontSize="12" isItalic="true"/>
    <style name="TableHeader" mode="Opaque" backcolor="#DDDDDD"
           fontName="SansSerif" fontSize="11" isBold="true" pdfFontName="Helvetica-Bold"/>
    <style name="TableDetail" fontName="SansSerif" fontSize="10"/>

    <queryString><![CDATA[]]></queryString>

    <!-- Solo un campo: facultad -->
    <field name="facultad" class="java.lang.String"/>

    <background>
        <band splitType="Stretch"/>
    </background>

    <!-- TÍTULO -->
    <title>
        <band height="90">
            <staticText>
                <reportElement x="0" y="10" width="555" height="30" style="TitleStyle"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Reporte de Facultades]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="45" width="555" height="20" style="SubTitleStyle"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Javier]]></text>
            </staticText>
        </band>
    </title>

    <!-- CABECERA -->
    <pageHeader>
        <band height="30">
            <staticText>
                <reportElement x="0" y="5" width="555" height="20" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Facultad]]></text>
            </staticText>
        </band>
    </pageHeader>

    <!-- DETALLE -->
    <detail>
        <band height="22">
            <textField isBlankWhenNull="true">
                <reportElement x="0" y="3" width="555" height="16" style="TableDetail"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{facultad}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- PIE DE PÁGINA -->
    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="555" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
