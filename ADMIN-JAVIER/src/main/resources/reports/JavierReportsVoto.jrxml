<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
        xmlns="http://jasperreports.sourceforge.net/jasperreports"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
        name="VotoVerificacionReport"
        language="java"
        pageWidth="595"
        pageHeight="842"
        columnWidth="555"
        leftMargin="20"
        rightMargin="20"
        topMargin="20"
        bottomMargin="20"
        uuid="ffffffff-ffff-ffff-ffff-ffffffffffff">

    <style name="TitleStyle" fontName="SansSerif" fontSize="18" isBold="true"/>
    <style name="SubTitleStyle" fontName="SansSerif" fontSize="11" isItalic="true"/>
    <style name="TableHeader" mode="Opaque" backcolor="#3652a5"
           forecolor="#FFFFFF"
           fontName="SansSerif" fontSize="10" isBold="true" pdfFontName="Helvetica-Bold"/>
    <style name="TableDetail" fontName="SansSerif" fontSize="9"/>

    <!-- Sin query porque usas JRTableModelDataSource -->
    <queryString><![CDATA[]]></queryString>

    <!-- CAMPOS POR ÍNDICE:
         COLUMN_2 -> Evento
         COLUMN_3 -> Verificado (Boolean)
         COLUMN_4 -> Creado en
    -->
    <field name="COLUMN_2" class="java.lang.Object"/>
    <field name="COLUMN_3" class="java.lang.Boolean"/>
    <field name="COLUMN_4" class="java.lang.Object"/>

    <background>
        <band splitType="Stretch"/>
    </background>

    <title>
        <band height="140">

            <image>
                <reportElement x="174" y="0" width="335" height="80"/>
                <imageExpression><![CDATA["reports/header.jpeg"]]></imageExpression>
            </image>

            <staticText>
                <reportElement x="0" y="70" width="555" height="25" style="TitleStyle"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Reporte de Verificación de Votos]]></text>
            </staticText>
        </band>
    </title>

    <pageHeader>
        <band height="25">
            <!-- Evento (COLUMN_2) -->
            <staticText>
                <reportElement x="0" y="5" width="220" height="20" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Evento]]></text>
            </staticText>

            <!-- Verificado (COLUMN_3) -->
            <staticText>
                <reportElement x="220" y="5" width="150" height="20" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Verificado]]></text>
            </staticText>

            <!-- Creado en (COLUMN_4) -->
            <staticText>
                <reportElement x="370" y="5" width="185" height="20" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Fecha del voto]]></text>
            </staticText>
        </band>
    </pageHeader>

    <detail>
        <band height="18">
            <!-- Evento -->
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement x="0" y="0" width="220" height="15" style="TableDetail"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{COLUMN_2}]]></textFieldExpression>
            </textField>

            <!-- Verificado (Boolean -> texto) -->
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement x="220" y="0" width="150" height="15" style="TableDetail"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{COLUMN_3} ? "Verificado" : "No verificado"]]></textFieldExpression>
            </textField>

            <!-- Creado en -->
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement x="370" y="0" width="185" height="15" style="TableDetail"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{COLUMN_4}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="555" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>
