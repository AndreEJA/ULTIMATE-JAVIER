<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
        xmlns="http://jasperreports.sourceforge.net/jasperreports"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
        name="CandidatoReport"
        language="java"
        pageWidth="595"
        pageHeight="842"
        columnWidth="555"
        leftMargin="20"
        rightMargin="20"
        topMargin="20"
        bottomMargin="20"
        uuid="aaaaaaaa-aaaa-aaaa-aaaa-aaaaaaaaaaaa">

    <!-- ESTILOS -->
    <style name="TitleStyle" fontName="SansSerif" fontSize="18" isBold="true"/>
    <style name="SubTitleStyle" fontName="SansSerif" fontSize="11" isItalic="true"/>
    <style name="TableHeader" mode="Opaque" backcolor="#DDDDDD"
           fontName="SansSerif" fontSize="10" isBold="true" pdfFontName="Helvetica-Bold"/>
    <style name="TableDetail" fontName="SansSerif" fontSize="9"/>

    <!-- Sin query porque usas JRTableModelDataSource -->
    <queryString><![CDATA[]]></queryString>

    <!-- CAMPOS: deben coincidir con los nombres de columna del Tab -->
    <field name="Evento" class="java.lang.Object"/>
    <field name="Facultad" class="java.lang.Object"/>
    <field name="Nombre" class="java.lang.Object"/>
    <field name="Pareja" class="java.lang.Object"/>

    <background>
        <band splitType="Stretch"/>
    </background>

    <!-- TÍTULO -->
    <title>
        <band height="70">
            <staticText>
                <reportElement x="0" y="10" width="555" height="25" style="TitleStyle"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Reporte de Candidatos]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="40" width="555" height="15" style="SubTitleStyle"/>
                <textElement textAlignment="Center"/>
                <text><![CDATA[Javier]]></text>
            </staticText>
        </band>
    </title>

    <!-- CABECERA DE PÁGINA -->
    <pageHeader>
        <band height="25">
            <!-- Evento -->
            <staticText>
                <reportElement x="0" y="5" width="160" height="20" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Evento]]></text>
            </staticText>

            <!-- Facultad -->
            <staticText>
                <reportElement x="160" y="5" width="140" height="20" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Facultad]]></text>
            </staticText>

            <!-- Nombre -->
            <staticText>
                <reportElement x="300" y="5" width="155" height="20" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Nombre]]></text>
            </staticText>

            <!-- Pareja -->
            <staticText>
                <reportElement x="455" y="5" width="100" height="20" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Pareja]]></text>
            </staticText>
        </band>
    </pageHeader>

    <!-- DETALLE -->
    <detail>
        <band height="18">
            <!-- Evento -->
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement x="0" y="0" width="160" height="15" style="TableDetail"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{Evento}]]></textFieldExpression>
            </textField>

            <!-- Facultad -->
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement x="160" y="0" width="140" height="15" style="TableDetail"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{Facultad}]]></textFieldExpression>
            </textField>

            <!-- Nombre -->
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement x="300" y="0" width="155" height="15" style="TableDetail"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{Nombre}]]></textFieldExpression>
            </textField>

            <!-- Pareja -->
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement x="455" y="0" width="100" height="15" style="TableDetail"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{Pareja}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- PIE DE PÁGINA -->
    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="555" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
